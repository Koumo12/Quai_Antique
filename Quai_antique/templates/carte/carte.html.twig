{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}

    <br>
    <!-- Carte -->
        <div class="">
            
            <div class="container containerHeight wrapper">
               
                <div class="row pb-5">
                    <h2 class="carte">Carte</h2>
                    <div class="pull-right text-center">
                        <button class="btn btn-small " data-toggle="portfilter" data-target="all">
                            All
                        </button>
                        {% for category in categories %}
                            <button class="btn btn-small " data-toggle="portfilter" data-target="{{category.titel}}">
                                {{category.titel}}
                            </button>
                        {% endfor %}
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    {% for plat in plats %}
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-5" data-tag="{{plat.category}}">
                            <div class="images text-center">
                                <img src="{{asset('/images/')}}{{plat.image}}" class="">
                                <h5>{{plat.titel}} - {{plat.price}} EUR</h5>
                                <div class="spacing">
                                    <p class="mini">({{plat.description}})</p>
                                </div>
                                <a href="" class="btn btn-outline-danger">Resever</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>    
                <div class="push"></div>        
            </div>
        </div>
    <!-- End Carte -->
    <br>
{% endblock %}
