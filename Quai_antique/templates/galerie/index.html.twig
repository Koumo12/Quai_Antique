    {% endfor %}

    <br>
    <div class="container containerHeight">
        <h2>Modifier la galerie</h2>
        <br>
        <table class="table table-striped">
            <thead>
            <tr>
                    <td>Id</td>
                    <td>Nom</td>
                    <td>Image</td>                  
                    <td><a href="{{ 'creer'}}" class="link">Cr√©er</a></td>
            </tr> 
            </thead>
