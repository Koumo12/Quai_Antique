{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
     <br>
    <div class="container containerHeight">
        <h2>Client</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>NbreConvive</th>
                    <td>{{ user.nbreConvive }}</td>
                </tr>
                <tr>
                    <th>Allergie</th>
                    <td>{{ user.allergie ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_client_index') }}" class="">Retour</a>
        &nbsp;
        <a href="{{ path('app_client_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
{% endblock %}
